.container {
  padding: 20px;
  background-color: #f9fafb;
}

.form {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.input, .textarea {
  width: 100%;
  margin-bottom: 15px;
  padding: 10px;
  border: 1px solid #e5e7eb;
  border-radius: 5px;
}

.post-button {
  width: 100%;
  padding: 12px;
  background-color: #00796b;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
  font-weight: bold;
}

.success {
  color: green;
}

.error {
  color: red;
}