.container {
  padding: 20px;
}

.input {
  width: 100%;
  padding: 12px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.pay-button {
  width: 100%;
  padding: 12px;
  background-color: #00796b;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
}

.success {
  color: green;
}

.error {
  color: red;
}